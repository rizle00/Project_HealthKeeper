<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/temperatureLinearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.TemperatureFragment"
    android:background="@color/main_color"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="260dp"
            android:background="#024C4C"
            android:layout_gravity="center">
           <androidx.cardview.widget.CardView
               android:alpha="0.8"
                android:layout_width="340dp"
                android:layout_height="250dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center">





    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:background="#F9FCFD"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/tem"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현재 체온"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:textSize="20dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/trueTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="36"
                    android:textColor="@color/main_color"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/tem_c"
                    android:paddingBottom="20dp"

                    />
            </LinearLayout>
        </LinearLayout>




            </LinearLayout>
          </androidx.cardview.widget.CardView>
      </FrameLayout>

    </androidx.cardview.widget.CardView>

    <View
        style="@style/gray_view_line1dp"
        android:layout_height="5dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"


        />

    <TextView
        android:id="@+id/tv_sate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="양      호"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/colorChangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:text="배경색상변경"
        />



</LinearLayout >