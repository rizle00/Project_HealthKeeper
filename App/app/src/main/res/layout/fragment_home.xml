                    app:cardCornerRadius="15dp"
                    android:layout_gravity="center"
                    >

                    <FrameLayout
                        android:background="#EDD7B5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!--CardView의 투명도를 나타내며, 값이 1.0이면 완전 불투명, 0.0이면 완전 투명-->
