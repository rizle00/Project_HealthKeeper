<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:text="로그아웃"

            />

    </RelativeLayout>

   <!-- <View
        style="@style/gray_view_line1dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="1.0"
        android:elevation="4dp"
        />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Smart \nHealthKeepper"
        android:textAlignment="center"
        android:textColor="#2A877E"
        android:textSize="30dp"
        android:elevation="10dp"
        android:shadowColor="#3B4A49"
        android:shadowDx="0"
        android:shadowDy="7"
        android:shadowRadius="5"
        android:layout_marginTop="20dp"



        />
    <View
        style="@style/gray_view_line1dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="20dp"
        android:alpha="1.0"
        android:background="#ADE4DF"
        android:elevation="4dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/edt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="에릭님 "
                android:textStyle="bold"
                android:textColor="#243070"
                android:textSize="17dp"
                android:elevation="10dp"
                android:shadowColor="#3B4A49"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘도 건강한 하루 되세요!!"
                android:textColor="#243070"
                android:textSize="17dp"
                android:elevation="10dp"
                android:shadowColor="#3B4A49"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/smallheart"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/gray_view_line1dp"
        android:background="#125A53"
        android:layout_height="1.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"

        />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:background="#EDF2F7"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#D6E7F9"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:src="@drawable/watch_img1"
                    android:scaleType="fitXY"
                    />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#D6E7F9"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/watch_img2"/>


            </androidx.cardview.widget.CardView>









            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#D6E7F9"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/watch_img6"

                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#D6E7F9"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/watch_img5"
                    />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"


                android:backgroundTint="#D6E7F9"
                app:cardCornerRadius="20dp">

                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="115dp"
                    android:background="#0E0F0F"
                    >

                    <androidx.cardview.widget.CardView
                        android:alpha="0.8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp">


                            <ImageView
                                android:layout_width="90dp"
                                android:src="@drawable/img_cctv"
                                android:layout_height="115dp"
                                android:scaleType="fitXY"
                                android:background="@android:color/transparent"
                                android:layout_marginBottom="27dp"
                                android:layout_marginTop="5dp"


                                />




                    </androidx.cardview.widget.CardView>
                </FrameLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#D6E7F9"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/watch_img1"
                    />


            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </HorizontalScrollView>



    <View
        style="@style/gray_view_line1dp"
        android:background="#125A53"
        android:layout_height="1.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#123"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:id="@+id/case1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        tools:ignore="DuplicateIds">


                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_above="@id/tv1"
                            android:src="@drawable/baseline_favorite_border_24" />

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Condition"
                            android:textAlignment="center"
                            android:textSize="20dp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#123"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:id="@+id/case2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        tools:ignore="DuplicateIds">


                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_above="@id/tv2"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/baseline_favorite_border_24" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="CCTV"
                            android:textAlignment="center"
                            android:textSize="20dp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"


            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#DBE6F1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#123"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:id="@+id/case3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        tools:ignore="DuplicateIds">


                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_above="@id/tv3"
                            android:src="@drawable/baseline_favorite_border_24" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Emergency"
                            android:textAlignment="center"
                            android:textSize="20dp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#123"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:id="@+id/case4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        tools:ignore="DuplicateIds">


                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_above="@id/tv4"
                            android:src="@drawable/baseline_favorite_border_24" />

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="CUMMUNITY"
                            android:textAlignment="center"
                            android:textSize="20dp" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>