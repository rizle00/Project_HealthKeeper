<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.ConditionActivity">




    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:selectionRequired="true"
        app:singleSelection="true">

        <!-- 체온 Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipTemperature"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:text="체온"
            android:textColor="@drawable/chip_foreground"
            app:chipBackgroundColor="@drawable/chip_background"
            app:chipIconEnabled="true"
            app:chipIconTint="@drawable/chip_foreground"
            app:chipMinHeight="40dp"
            app:iconEndPadding="10dp"
            app:iconStartPadding="10dp"
            app:textEndPadding="5dp"
            app:textStartPadding="5dp" />




        <!-- 심박 Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipHeartRate"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="심박"
            android:textColor="@drawable/chip_foreground"
            app:chipBackgroundColor="@drawable/chip_background"
            app:chipIconEnabled="true"
            app:chipIconTint="@drawable/chip_foreground"
            app:chipMinHeight="40dp"
            app:iconEndPadding="10dp"
            app:iconStartPadding="10dp"
            app:textEndPadding="5dp"
            app:textStartPadding="5dp" />


    </com.google.android.material.chip.ChipGroup>


    <View
        style="@style/gray_view_line1dp"
        android:layout_height="3dp"
        />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
