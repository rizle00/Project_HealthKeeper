<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.healthkeeper.setting.Setting"
        android:orientation="vertical">
    <LinearLayout
            android:id="@+id/ll_setting_btcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingLeft="20dp"
                  android:textSize="20dp"
                  android:layout_gravity="center_vertical"
                  android:text="블루투스 연결"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_setting_bend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingLeft="20dp"
                  android:textSize="20dp"
                  android:layout_gravity="center_vertical"
                  android:text="기기 관리"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_setting_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingLeft="20dp"
                  android:textSize="20dp"
                  android:layout_gravity="center_vertical"
                  android:text="도움말"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_setting_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingLeft="20dp"
                  android:textSize="20dp"
                  android:layout_gravity="center_vertical"
                  android:text="공지사항"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_setting_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingLeft="20dp"
                  android:textSize="20dp"
                  android:layout_gravity="center_vertical"
                  android:text="회원 정보 수정"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_setting_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingLeft="20dp"
                  android:textSize="20dp"
                  android:layout_gravity="center_vertical"
                  android:text="로그아웃"/>
    </LinearLayout>


</LinearLayout>