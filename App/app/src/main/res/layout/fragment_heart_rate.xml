<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/HeartlateLinearlayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".main.monitor.HeartRateFragment"
        android:background="@color/main_color"
        android:paddingTop="20dp"
        android:orientation="vertical">


    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart HealthKeeper"
            android:gravity="right"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
    />
    <View
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"/>
    <View
            android:layout_width="180dp"
            android:layout_marginRight="20dp"
            android:layout_height="3dp"
            android:layout_gravity="right"
            android:background="#123"/>

    <Button
            android:id="@+id/colorChangeButton"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="배경색변경"
    />


    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="heartrate.json"
            app:lottie_loop="true"/>


    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center"

    >
        <FrameLayout
                android:layout_width="330dp"
                android:layout_height="180dp"
                android:background="#024C4C"
                android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                    android:alpha="1.0"
                    android:layout_width="320dp"
                    android:layout_height="170dp"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="center">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                    <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시각"
                            android:layout_marginEnd="10dp"
                            android:textSize="12dp"
                            android:layout_gravity="top|end"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                    >


                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="현재 심박수"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="25dp"
                                android:layout_marginBottom="10dp"
                                android:textAlignment="center"


                        />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                        >


                            <TextView
                                    android:id="@+id/trueHeartrate"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="112"
                                    android:textColor="@color/main_color"
                                    android:textStyle="bold"
                                    android:textSize="40dp"
                                    android:layout_marginLeft="15dp"/>

                            <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="80dp"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="15dp"
                                    android:text="BPM"
                                    android:textStyle="bold"
                                    android:textSize="25dp"
                                    android:paddingBottom="20dp"

                            />
                        </LinearLayout>


                    </LinearLayout>
                    <Button
                            android:id="@+id/btn_refresh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="새로고침"
                            android:textColor="#123"
                            android:backgroundTint="@color/white"
                            android:textSize="13dp"
                            android:layout_gravity="bottom"

                    />


                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

    </androidx.cardview.widget.CardView>


    <View
            style="@style/gray_view_line1dp"
            android:layout_height="5dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"


    />

    <TextView
            android:id="@+id/tv_sate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="양      호"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="@color/white"
    />

    <Button
            android:id="@+id/goHome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="홈으로"
            android:textColor="#123"
            android:backgroundTint="#DFE1E4"
            android:textStyle="bold|italic"
            android:layout_gravity="bottom"
            android:layout_marginTop="50dp"
            android:textSize="20dp"

    />


</LinearLayout>

