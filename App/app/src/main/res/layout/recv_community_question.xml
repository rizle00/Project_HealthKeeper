<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


       <!--데이터 바인딩을 사용하면 뷰 모델의 데이터를 XML 레이아웃과 연결할 수 있다-->
<!--    <data>
        <variable
            name="viewModel"
            type="com.example.healthkeeper.main.CommunityViewModel" />
    </data>-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2F1EF"
            android:orientation="vertical"
            >
    <LinearLayout
        android:id="@+id/ln_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2F1EF"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


      <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="15dp"
        >
        <ImageView
            android:id="@+id/img_profile"
            android:src="@drawable/baseline_home_24"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/click_content_open"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                    android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_tile"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:padding="3dp"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/img_more"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more"
                    android:textColor="#0B4F92"
                    android:textSize="19dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    android:paddingRight="10dp"
                    android:onClick="noticeContentvisibled"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_writer"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="작성자"/>
                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:layout_marginRight="5dp"
                        android:text="|"/>
            <TextView
                android:id="@+id/tv_write_time"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="10시20분"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:text="|"/>

        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="30dp">
        <ImageView
            android:id="@+id/img_read_cnt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/response"
            android:visibility="visible"
            >

        </ImageView>

        <TextView
            android:id="@+id/tv_read_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="5dp"
            android:text="333"
            android:textColor="@color/main_color"
            android:visibility="invisible" />
    </RelativeLayout>


   </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/tv_click_answer"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content"
                        android:text="내용"
                        android:padding="3dp"
                        android:clickable="true"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:inputType="textMultiLine"

                        />

                    <ImageView
                        android:id="@+id/img_less"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/less"
                        android:textColor="#0B4F92"
                        android:textSize="19dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="visible"
                        android:paddingRight="10dp"
                        android:onClick="noticeContentvisibled"
                        android:textStyle="bold" />
                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <View
                        android:layout_width="250dp"
                        android:layout_height="2dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        android:background="#95EEE6"/>

                    <LinearLayout
                        android:id="@+id/ok_answer"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/answer"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.65"
                            android:layout_height="wrap_content"
                            android:text="운영자답글"
                            android:paddingRight="5dp"
                            android:textColor="#145FAA"
                            android:padding="3dp"
                            android:clickable="true"
                            android:textStyle="bold|italic"
                            android:textSize="13dp"
                            android:inputType="textMultiLine"
                            android:visibility="visible"
                            />

                        <TextView
                            android:id="@+id/tv_answer"
                            android:layout_width="0dp"
                            android:layout_weight="2.2"
                            android:layout_height="wrap_content"
                            android:text="답글 내용"
                            android:layout_marginRight="12dp"
                            android:padding="3dp"
                            android:clickable="true"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:inputType="textMultiLine"

                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>
