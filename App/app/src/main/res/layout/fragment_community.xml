<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.community.CommunityFragment">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <!-- 게시판  -->
            <android.widget.Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="게시판"
                android:textStyle="bold"
                android:backgroundTint="@drawable/selector_community_title"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                />
                <!--style="@android:style/Widget.Button"-->

            <!-- 자주묻는 질문 -->
            <android.widget.Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:textStyle="bold"
                android:backgroundTint="@drawable/selector_community_title"
                android:layout_height="wrap_content"
                android:text="자주묻는 질문"
                android:clickable="true"


                />

            <!-- 공지사항  -->
            <android.widget.Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:textStyle="bold"
                android:backgroundTint="@drawable/selector_community_title"
                android:layout_marginStart="5dp"
                android:layout_marginRight="10dp"
                android:clickable="true"

                />

        </LinearLayout>

            <!-- ScrollView -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button3"
               >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >




                    <View
                        style="@style/gray_view_line1dp"
                        android:id="@+id/view1"
                        android:background="#123"
                        android:layout_height="1dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#F2ECEE"
                        >
                        <TextView
                            android:id="@+id/tv_boardTitle"
                            android:layout_centerVertical="true"
                            android:textSize="20dp"
                            android:textStyle="bold"

                            android:text="게 시 판"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <Button
                            android:id="@+id/tv_new_writing"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/img_alam"
                            android:text="글쓰기"
                            android:textStyle="bold"
                            android:layout_width="100dp"
                            android:backgroundTint="#F29B80"
                            android:paddingBottom="2dp"
                            android:layout_height="35dp"/>

                    </RelativeLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/tv_new_writing_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#FFFFFF"
                        android:elevation="20dp"
                        android:visibility="gone"
                        >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="제  목"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    />

                                <com.google.android.material.textfield.TextInputLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="제목을 입력해주세요"
                                    app:endIconMode="clear_text"
                                    android:layout_margin="10dp"
                                    >

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edt_tltleName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        />

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="내용"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    />

                                <com.google.android.material.textfield.TextInputLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="내용을 입력해주세요"
                                app:endIconMode="clear_text"
                                android:layout_margin="10dp"
                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_tltleContent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    />
                                    <!-- android:inputType="textMultiLine":엔터키를 사용하여 아랫줄로 내려갈 수 있게 됨-->

                            </com.google.android.material.textfield.TextInputLayout>
                                <Button
                                    android:id="@+id/save_new_write"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:text="글 올리기"
                                    android:paddingBottom="3dp"
                                    android:textStyle="bold|italic"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="30dp"
                                    android:textSize="14dp"
                                    android:textColor="#FAB348"
                                    android:backgroundTint="#FFFFFF"
                                    />
                            </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/board"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                            android:id="@+id/clickButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Read more"
                            android:layout_gravity="right"
                            android:layout_marginRight="30dp"
                            android:textSize="14dp"
                            android:textColor="#3B7CBD"
                            android:backgroundTint="#FFFFFF"
                            />


                    <View
                        android:id="@+id/view2"
                        style="@style/gray_view_line1dp"
                        android:background="#123"
                        android:layout_height="1dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        >
                        <TextView
                            android:id="@+id/tv_questionTitle"
                            android:layout_centerVertical="true"
                            android:text="자주묻는질문"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView

                            android:layout_alignParentRight="true"
                            android:src="@drawable/img_alam"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                    <View
                        android:id="@+id/view3"
                        style="@style/gray_view_line1dp"
                        android:background="#123"
                        />


                    <View
                        style="@style/gray_view_line1dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/tv_noticeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="공지사항"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:src="@drawable/img_alam"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>



