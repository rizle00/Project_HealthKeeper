<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".member.LoginActivity"
    android:orientation="vertical"
    >
    <TextView
        android:layout_marginVertical="100dp"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart HomeKeeper!!"
        android:textColor="#2A877E"
        android:fontFamily="@font/fontmain"
        />

    <EditText
        android:id="@+id/user_id"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint=" 아이디"
        android:background="@drawable/edittext_rounded"
       />
    <EditText
        android:id="@+id/user_pw"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint=" 비밀번호"
        android:inputType="textPassword"
        android:background="@drawable/edittext_rounded"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:background="@drawable/button_customize"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/white"
        android:text="로그인"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardv_kakao_login"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/kakao_login_btn"
        android:background="#FEE500" />
    </androidx.cardview.widget.CardView>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.navercorp.nid.oauth.view.NidOAuthLoginButton
        android:id="@+id/btn_naver_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="#03C75A"
        android:src="@drawable/img_naver_login"
        android:visibility="invisible"
         />
    <ImageView
        android:layout_marginHorizontal="30dp"
        android:src="@drawable/img_naver_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#03C75A"
        android:id="@+id/fake"
        />
</FrameLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_find_id"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="아이디 찾기" />
        <TextView
            android:id="@+id/tv_find_pw"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기" />
        <TextView
            android:id="@+id/tv_join"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="회원가입" />

    </LinearLayout>
</LinearLayout>