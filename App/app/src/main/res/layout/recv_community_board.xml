<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


       <!--데이터 바인딩을 사용하면 뷰 모델의 데이터를 XML 레이아웃과 연결할 수 있다-->
<!--    <data>
        <variable
            name="viewModel"
            type="com.example.healthkeeper.main.CommunityViewModel" />
    </data>-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        >
    <LinearLayout
        android:id="@+id/ln_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2F1EF"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="15dp"
        >
        <ImageView
            android:id="@+id/img_profile"
            android:src="@drawable/baseline_home_24"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_writer"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="작성자"/>
                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:layout_marginRight="5dp"
                        android:text="|"/>
            <TextView
                android:id="@+id/tv_write_time"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="10시20분"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:text="|"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/response">

        </ImageView>

        <TextView
            android:id="@+id/tv_Comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="5dp"
            android:text="333"
            android:textColor="@color/main_color"
            android:visibility="invisible" />
    </RelativeLayout>


</LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
